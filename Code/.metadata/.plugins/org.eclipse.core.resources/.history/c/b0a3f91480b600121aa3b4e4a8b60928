	 */
	public Journey()
	{
		Stop s0 = new Stop("");
		Stop s1 = new Stop("");
		Stop s2 = new Stop("");
		Stop s3 = new Stop("");
		Stop s4 = new Stop("");
		Stop s5 = new Stop("");
		Stop s6 = new Stop("");
		Stop s7 = new Stop("");
